<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/skip_holiday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/skip_holiday"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/big_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/big_week"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/small_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/small_week"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android.clickable="true"
        android.focusable="true" />

    <TextView
        android:id="@+id/single_day_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/single_day_off"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android.clickable="true"
        android.focusable="true" />

</LinearLayout>
